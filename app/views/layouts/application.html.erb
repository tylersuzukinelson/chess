<!DOCTYPE html>
<html>
<head>
  <title>Chess</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container container-fluid">
  <%= link_to 'Home', root_path %>
  |
  <%= link_to 'New Game', new_game_path %>
  |
  <% if current_user %>
    Signed in as <%= current_user.name || current_user.full_name %> 
    | 
    <%= link_to "Logout", '/logout' %>
  <% else %>
    <%= link_to 'Signup', new_user_path %> 
    |
    <a href='/auth/facebook'> <%= image_tag('http://i.stack.imgur.com/pZzc4.png', :height => "30", :width => "100") %></a>
  <% end %>
  <hr>
  <div class="flash">
    <%= flash[:alert] || flash[:notice] %>
  </div>
  <hr>
  <%= yield %>
</div>
</body>
</html>
